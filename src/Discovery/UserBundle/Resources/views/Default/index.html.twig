{% extends '::base.html.twig' %}

{% block body %}
    <div class="col-xs-12">
        <a href="user/create" class="btn btn-primary"><i class="fa fa-plus"></i> Create New User</a>
        <table class="table table-bordered table-responsive table-hover table-striped">
            <thead>
            <tr>
                <th>Username</th>
                <th>eMail</th>
                <th>Full Name</th>
                <th>Last Login</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstName }} {{ user.lastName }}</td>
                    <td>{{ user.lastLogin|date("Y-m-d H:i:s") }}</td>
                    <td>
                        <a href="user/update/{{ user.id }}" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>
                        <a href="user/delete/{{ user.id }}" class="btn btn-danger"><i class="fa fa-remove"></i>
                            Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}