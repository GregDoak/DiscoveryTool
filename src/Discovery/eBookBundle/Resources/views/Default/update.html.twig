{% extends '::base.html.twig' %}

{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <p class="help-block">
                {% for error in errors %}
                    {{ error.message }}
                {% endfor %}
            </p>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            {% if message|length %}
                <div class="alert alert-success" role="alert">{{ message }}</div>
            {% endif %}
            <h3>Update {{ ebook.isbn }}</h3>
            <div>
                {{ form_errors(form) }}
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.googleUID, 'Google Unique ID: ') }}
                    {{ form_widget(form.googleUID, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Please enter the Google Unique ID'
                        }
                    }) }}
                    {{ form_errors(form.googleUID) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.opacURL, 'OPAC URL: ') }}
                    {{ form_widget(form.opacURL, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Please enter the permanant link for this item in the OPAC'
                        }
                    }) }}
                    {{ form_errors(form.opacURL) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.url, 'Resource URL: ') }}
                    {{ form_widget(form.url, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Please enter the URL of this resource'
                        }
                    }) }}
                    {{ form_errors(form.url) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.linkType, 'Link Type: ') }}
                    {{ form_widget(form.linkType, {
                        'attr': {
                            'class': 'form-control'
                        }
                    }) }}
                    <p class="help-block">This field indicates whither the resource provided is the full document or
                        not.</p>
                    {{ form_errors(form.linkType) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.processed, 'Processed: ') }}
                    {{ form_widget(form.processed) }}
                    {{ form_errors(form.processed) }}
                </div>

                <div class="form-group">
                    <label>Attempt Count: </label>
                    {{ ebook.attemptCount }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.submit, {
                        'label': 'Update',
                        'attr': {
                            'class': 'btn btn-primary'
                        }
                    }) }}
                    <a href="/admin/ebooks" class="btn btn-default">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
